// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  // Editor
  "autosave": "on_focus_change",
  "minimap": { "show": "auto", "display_in": "active_editor" },
  "tabs": { "git_status": true, "file_icons": false },
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false
  },
  "show_whitespaces": "selection",
  "wrap_guides": [88],
  "preferred_line_length": 88,
  "hard_tabs": false,
  "scroll_beyond_last_line": "one_page", // or "off"
  "inlay_hints": {
    "enabled": false,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true,
    "show_background": false
  },

  // AI
  "features": {
    // Can't configure this per project
    "edit_prediction_provider": "copilot"
  },
  "agent": {
    "default_profile": "ask",
    "use_modifier_to_send": true,
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4"
    }
  },
  "show_edit_predictions": true,
  "edit_predictions": {
    "mode": "eager"
  },

  // Vim
  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "on_yank",
    "highlight_on_yank_duration": 500,
    "toggle_relative_line_numbers": true
  },

  // UI
  "ui_font_size": 16,
  "buffer_font_size": 13,
  "buffer_font_family": "FiraCode Nerd Font Mono",
  "buffer_font_weight": 400,
  "buffer_font_features": {
    "calt": true // ligatures
  },
  "theme": {
    "mode": "system",
    "light": "Gruvbox Light Soft",
    "dark": "Gruvbox Dark Hard"
  },
  "title_bar": {
    "show_branch_icon": true
  },

  // Extensions
  "auto_install_extensions": {
    "csv": true,
    "git-firefly": true,
    "html": true,
    "latex": true,
    "log": true,
    "ltex": true,
    "make": true,
    "toml": true
  },

  // Languages
  "languages": {
    "Python": {
      "tab_size": 4,
      "language_servers": ["basedpyright", "!pyright", "ruff"],
      "format_on_save": "on",
      "formatter": { "language_server": { "name": "ruff" } },
      "code_actions_on_format": {
        "source.fixAll.ruff": false,
        "source.organizeImports.ruff": true
      }
    }
  },

  // LSPs
  "lsp": {
    "pylsp": {
      "binary": {
        // python-lsp-server is installed in its own venv
        "path": "/Users/avivr/miniforge3/envs/py-codestyle/bin/pylsp"
      },
      "settings": {
        // https://github.com/python-lsp/python-lsp-server/blob/develop/CONFIGURATION.md
        "plugins": {
          // By default disable eveything. Can enable per-project.
          "pylsp_mypy": { "enabled": false }, // https://github.com/python-lsp/pylsp-mypy
          "ruff": { "enabled": false }, // we use separate ruff LSP
          "autopep8": { "enabled": false },
          "flake8": { "enabled": false },
          "jedi": {
            // Set this in project-specific zed settings:
            // "environment": "/path/to/venv/bin/python",
          },
          "jedi_completion": { "enabled": false },
          "jedi_definition": { "enabled": false },
          "jedi_hover": { "enabled": false },
          "jedi_references": { "enabled": false },
          "jedi_signature_help": { "enabled": false },
          "jedi_symbols": { "enabled": false },
          "mccabe": { "enabled": false },
          "preload": { "enabled": true },
          "pycodestyle": { "enabled": false },
          "pydocstyle": { "enabled": false },
          "pyflakes": { "enabled": false },
          "pylint": { "enabled": false },
          "rope_autoimport": { "enabled": false },
          "rope_completion": { "enabled": false },
          "yapf": { "enabled": false }
        }
      }
    },
    "basedpyright": {
      "settings": {
        "basedpyright": {
          "disableLanguageServices": false,
          "disableOrganizeImports": true,
          "disableTaggedHints": false
        },
        "basedpyright.analysis": {
          "typeCheckingMode": "standard", // ["off", "basic", "standard", "strict", "recommended", "all"]
          "autoImportCompletions": true,
          "diagnosticMode": "openFilesOnly", // ["openFilesOnly", "workspace"]
          "exclude": ["tests/"],
          "useTypingExtensions": true
        }
      }
    },
    "ruff": {
      "initialization_options": {
        "settings": {
          "showSyntaxErrors": true,
          "organizeImports": true,
          "fixAll": true,
          "lint": { "enable": true }
        }
      }
    },
    "yaml-language-server": {
      "settings": {
        "yaml": { "validate": false }
      }
    },
    "texlab": {
      "settings": {
        "texlab": {
          "build": {
            "onSave": true,
            "forwardSearchAfter": true,
            "forwardSearch": {
              "executable": "/Applications/Skim.app/Contents/SharedSupport/displayline",
              "args": ["-r", "%l", "%p", "%f"]
            }
          }
        }
      }
    }
  }
}
